<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.film_detail.FilmDetailFragment">

    <View
        android:id="@+id/left_color"
        android:layout_width="5dp"
        android:layout_height="300dp"
        android:layout_margin="15dp"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        tools:text="Title: ****"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="25dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/original_tv"
        android:layout_width="wrap_content"
        tools:text="@tools:sample/last_names"
        android:textColor="@color/holo_blue"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="25dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/film_im"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginEnd="12dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintTop_toBottomOf="@id/original_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="30sp" />

    <TextView
        android:id="@+id/director_tv"
        android:layout_width="wrap_content"
        tools:text="Director : ****"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="25dp"
        android:textColor="@color/dark_blue"
        app:layout_constraintTop_toBottomOf="@id/film_im"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/producer_tv"
        android:layout_width="wrap_content"
        tools:text="Producer : ****"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="25dp"
        android:textColor="@color/dark_blue"
        app:layout_constraintTop_toBottomOf="@id/director_tv"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        tools:text="Description : ****"
        android:textColor="@color/dark_blue"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="25dp"
        app:layout_constraintTop_toBottomOf="@id/producer_tv"
        android:layout_height="wrap_content" />


</androidx.constraintlayout.widget.ConstraintLayout>